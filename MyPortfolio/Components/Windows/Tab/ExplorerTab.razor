﻿@if(Parent.ActivePage == this)
{
	@ChildContent
}

@code {
	[CascadingParameter]
	private ExplorerWindow Parent { get; set; }

	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Title { get; set; }

	[Parameter]
	public string Group { get; set; } = "";

	protected override void OnInitialized()
	{
		if (Parent == null)
			throw new ArgumentNullException(nameof(Parent), "ExplorerTabl must exist within a ExplorerWindow");

		base.OnInitialized();
		Parent.AddPage(this);
	}
}