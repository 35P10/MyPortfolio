@using MyPortfolio.Components.Buttons;

<div class="content">
	<div class="content-content">
		<div class="box-shadow-3 img img-large" style="background-image:url('@SourceImgLarge')"></div>
		<div class="box-shadow-3 img img-high" style="background-image:url('@SourceImgHigh')"></div>
		<div class="text">
			<h4>@ProjectTitle</h4>
			<p class="box-shadow-sub">@Description</p>
		</div>
	</div>
	<div class="links">
		@if (SourceCode != "")
		{
			<ToolTipButton ToolTipMsg="Repositorio">
				<a class="box-shadow tech-icon" href="@SourceCode">
					<img src="https://pngimg.com/uploads/github/github_PNG27.png" loading="lazy" alt="source link: github icon">
				</a>
			</ToolTipButton>
		}
		@if (PublishLink != "")
		{
			<ToolTipButton ToolTipMsg="Publicación">
			<a class="box-shadow tech-icon" href="@PublishLink">
				<img src="icons/external-link.svg" loading="lazy" alt="link to online publish">
			</a>
			</ToolTipButton>
		}
		@if (Techs.Count != 0)
		{
			<hr />
			<div class="tech-section"> 
			<p>Tecnologías:</p>
			@foreach(String tech in Techs)
			{
					<ToolTipButton ToolTipMsg=@tech>
				<div class="box-shadow-sub-2 tech-icon">
					<TechIcon Technology=@tech />
				</div>
				</ToolTipButton>
			}
			</div>
		}
	</div>
</div>


@code {
	[Parameter]
	public String ProjectTitle { get; set; }

	[Parameter]
	public String Description { get; set; }

	[Parameter]
	public String SourceCode { get; set; } = "";

	[Parameter]
	public String PublishLink { get; set; } = "";

	[Parameter]
	public String SourceImgLarge { get; set; }

	[Parameter]
	public String SourceImgHigh { get; set; }

	[Parameter]
	public List<String> Techs { get; set; } = new List<string>();
}
